{
  "name": "@caseywebb/growhaus",
  "version": "1.0.0",
  "license": "WTFPL",
  "bin": "./bin/growhaus",
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "start": "node dist/index.js",
    "lint": "esw --color --ignore-path .gitignore --ext .js,.ts ./",
    "format": "pretty-quick",
    "test": "jest"
  },
  "dependencies": {
    "johnny-five": "^1.2.0",
    "pi-io": "^1.0.0",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/johnny-five": "^1.3.0",
    "@types/jquery": "^3.3.30",
    "@types/lodash": "^4.14.150",
    "@types/mockdate": "^2.0.0",
    "eslint": "^6.5.1",
    "eslint-config-profiscience": "^5.0.2",
    "eslint-watch": "^6.0.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "mockdate": "^2.0.5",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "isolatedModules": true,
        "diagnostics": false
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "profiscience"
    ],
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    }
  },
  "prettier": {
    "arrowParens": "always",
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format --staged",
      "pre-push": "yarn lint"
    }
  }
}
